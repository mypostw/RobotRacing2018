<launch>
  <env name="GAZEBO_MODEL_PATH" value="$(find rr_vehicle_description)"/>
  <env name="GAZEBO_RESOURCE_PATH" value="$(find rr_vehicle_description)"/>
  <arg name="namespace" default="robot_racer"/>
  <arg name="world_name" default="worlds/empty.world"/>

  <group ns="$(arg namespace)alpha">
    <include file="$(find rr_vehicle_gazebo)/launch/rr_vehicle.launch">
      <arg name="namespace" value="$(arg namespace)alpha" />
    </include>
  </group>

</launch>
